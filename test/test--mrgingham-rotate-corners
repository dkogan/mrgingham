check "rot270" <(cat $datafile) "--gridn 3 --270 a" "$(cat <<EOF
# filename x y level
b 20 200 0
b 21 200 0
b 22 200 0
b 20 201 0
b 21 201 0
b 22 201 0
b 20 202 0
b 21 202 0
b 22 202 0
c 30 300 0
c 31 300 0
c 32 300 0
